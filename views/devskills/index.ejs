<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express Dev Skills</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <a href="/">Home</a>
    <h1>Dev Skills</h1>
    <a href="/devskills/new/">New Skill</a>
    <ul>
        <% devskills.forEach(function(t) { %>
            <li>
                <a href="/devskills/<%= t.id %>"><%= t.devskill %></a>
                    - 
                <%= t.done ? 'done' : 'not done' %>

                <form method="POST" action="/devskills/<%= t.id %>?_method=DELETE">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>